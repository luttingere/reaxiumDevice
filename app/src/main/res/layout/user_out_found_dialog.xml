<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="25dp"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/title_container"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageView
            android:layout_centerInParent="true"
            android:src="@drawable/logo_reaxium"
            android:layout_width="150dp"
            android:layout_height="match_parent" />


        <ImageView
            android:id="@+id/close_dialog"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/close_icon"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_width="25dp"
            android:layout_height="25dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/title_container"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/user_info_container"
        android:layout_width="match_parent"
        android:layout_height="330dp">

        <RelativeLayout
            android:gravity="right"
            android:id="@+id/user_picture_container"
            android:layout_width="0dp"
            android:layout_weight="50"
            android:layout_height="match_parent">

            <ProgressBar
                android:visibility="visible"
                android:id="@+id/user_image_loader"
                style="?android:attr/progressBarStyle"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"/>

            <com.makeramen.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/user_photo"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:clickable="true"
                android:layout_centerInParent="true"
                android:src="@drawable/user_avatar"
                app:riv_border_width="1dip"
                app:riv_corner_radius="10dip"
                app:riv_border_color="@android:color/transparent"
                app:riv_oval="false" />


        </RelativeLayout>


        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="45"
            android:paddingLeft="20dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="55dp">

                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/rounded_corners_orange"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:gravity="center">

                    <ImageView
                        android:src="@drawable/user_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />


                </LinearLayout>

                <TextView
                    android:id="@+id/username_input"
                    android:textColor="@color/black"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="Student name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="55dp">

                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/rounded_corners_yellow"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:gravity="center">

                    <ImageView
                        android:src="@drawable/student_id_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />


                </LinearLayout>

                <TextView
                    android:id="@+id/user_document_id"
                    android:textColor="@color/black"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="Student ID"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="55dp">

                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/rounded_corners_sand"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:gravity="center">

                    <ImageView
                        android:src="@drawable/bus_number_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />


                </LinearLayout>

                <TextView
                    android:id="@+id/bus_number"
                    android:textColor="@color/black"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="Bus number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="55dp">

                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/rounded_corners_yellow"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:gravity="center">

                    <ImageView
                        android:src="@drawable/stop_bus_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />


                </LinearLayout>

                <TextView
                    android:id="@+id/stop_bus_number"
                    android:textColor="@color/black"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="Stop Number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="55dp">

                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/rounded_corners_orange"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:gravity="center">

                    <ImageView
                        android:src="@drawable/school_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />


                </LinearLayout>

                <TextView
                    android:id="@+id/user_business_name"
                    android:textColor="@color/black"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="School Name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_corners_blue"
        android:layout_below="@+id/user_info_container"
        android:layout_width="400dp"
        android:layout_height="60dp">

    </RelativeLayout>


</RelativeLayout>